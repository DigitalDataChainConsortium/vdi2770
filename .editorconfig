root = true

[*]
indent_style = tab
tab_width = 4
end_of_line = lf
charset = utf-8
curly_bracket_next_line = false
spaces_around_operators = true

[*.bat]
end_of_line = crlf

[*.java]
continuation_indent_size = 8
insert_final_newline = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[*.xml]
indent_style = tab
tab_width = 4
indent_size = 1
trim_trailing_whitespace = true

[*.xsd]
indent_style = tab
tab_width = 4
indent_size = 1
trim_trailing_whitespace = true